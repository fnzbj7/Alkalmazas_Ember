<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>Időpont</th>
            <th>Státusz</th>
            <th>Helyszín</th>
            <th>Leírás</th>
            <th>Funkciók</th>
        </tr>   
    </thead>
    <tbody>

        {{#each errors}}
        <tr>
            {{!--{{log this}}--}}
            <td>{{date}}</td>
            <td><span class="label label-success">{{status}}</span></td>
            <td>{{location}}</td>
            <td>{{description}}</td>
            <td>
                {{link-to "Megtekint" "errors.view" this class="btn btn-default btn-sm"}}
                {{link-to "Szerkeszt" "errors.edit" this class="btn btn-default btn-sm"}}
                <button {{action "deleteError" this}} class="btn btn-default btn-sm">Töröl</button>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>